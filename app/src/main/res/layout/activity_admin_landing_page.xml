<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".adminLandingPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Control Panel"
        android:textSize="30sp"
        android:textColor="@color/light_blue"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/student_accounts_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_background_button"
        android:text="@string/student_accounts"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/lecturer_requests_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_background_button"
        android:text="Lecture requests"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/generate_student_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_background_button"
        android:text="@string/generate_report"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/student_marks_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_background_button"
        android:text="@string/student_marks"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/print_summary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_background_button"
        android:text="@string/summary"
        android:textColor="@color/white"
        android:textStyle="bold"/>
</LinearLayout>